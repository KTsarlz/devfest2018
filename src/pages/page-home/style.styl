@import '../../styles/general/typography.styl'
@import '../../styles/general/color.styl'

:host
  display block
  min-height 100vh
  background #fff

.banner
  width 100%
  min-height 100vh
  position relative
  z-index 2

  .banner-gradient-container
    z-index -1
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    right 0
    background #36145d /* Old browsers */
    background linear-gradient(to right, #36145d 0%,#ba00e0 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    opacity 0.8

  .banner-image-container
    z-index -2
    width 100%
    height 100%
    display flex
    align-items stretch
    position absolute
    top 0
    left 0
    right 0

    .banner-image
      width 100%
      flex 1
