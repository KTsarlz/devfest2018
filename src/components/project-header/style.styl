@import '../../styles/general/host-block.styl'
@import '../../styles/general/spacing.styl'

.header
  display: flex
  align-items center
  position absolute
  top 0
  left 0
  right 0
  height 9rem
  z-index 3
  margin 0 auto
  max-width 1280px
  padding 0 12px
  color #fff

  @media screen and (max-width: 600px)
    height 8rem

.header
  .title
    margin: 0
    padding-left: $small
    font-size 1.5rem

    .logo
      width 20rem

      @media screen and (max-width: 600px)
        width 15rem

  .spacer
    flex: 1

  .button
    margin-left: $small

.button
  border: 0
  background: none
  cursor: pointer
  border-radius: 50%
  padding: 0

  &:hover
    background: #eee

.icon
  width: $small
  height: $small
  color #fff
  fill #fff

.show-on-mobile-only
  display: none

  @media screen and (max-width: 700px)
    display: block

.hide-on-mobile
  display: block

  @media screen and (max-width: 700px)
    display: none

